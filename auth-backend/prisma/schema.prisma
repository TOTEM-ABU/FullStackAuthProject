datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

enum UserRoles {
  ADMIN
  USER
}

model User {
  id            String    @id @default(uuid())
  firstName     String
  lastName      String
  email         String
  password      String
  phoneNumber   String
  yearOfBirth   DateTime
  role          UserRoles
  status        Boolean   @default(false)
  refresh_token String?
  createdAt     DateTime  @default(now())
}
